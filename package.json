{
  "name": "catalyst-browser",
  "version": "0.0.3",
  "description": "The secondary web browser of digital creatives.",
  "author": "Wynter Jones <wynter@monetizedesign.com> (https://wynter.ai)",
  "main": "electron/main.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "update-version": "node scripts/update-version.js",
    "electron:dev": "npm run update-version && concurrently \"vite\" \"electron .\"",
    "electron:build": "npm run update-version && vite build && electron-builder",
    "electron:build:dev:dmg": "npm run update-version && vite build && CSC_IDENTITY_AUTO_DISCOVERY=false CSC_FORCE_SIGN=false electron-builder -m --config.mac.identity=null --config.mac.notarize=false --config.afterSign=\"\" --config.extraMetadata.main=electron/main-dev.js --publish never",
    "publish": "npm run update-version && vite build && electron-builder build --mac --publish always"
  },
  "build": {
    "appId": "com.catalystbrowser.app",
    "productName": "Catalyst",
    "afterSign": "electron/afterSign.js",
    "publish": [
      {
        "provider": "github",
        "owner": "aFightClub",
        "repo": "Catalyst",
        "releaseType": "release"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "mac": {
      "icon": "src/images/icon.png",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Wynter Jones (7X2UF4FZHC)",
      "notarize": true
    },
    "dmg": {
      "background": "src/images/installbg_large.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "src/images/icon.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "src/images/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "@editorjs/checklist": "^1.6.0",
    "@editorjs/editorjs": "^2.30.8",
    "@editorjs/header": "^2.8.8",
    "@editorjs/list": "^2.0.6",
    "@editorjs/marker": "^1.4.0",
    "@editorjs/paragraph": "^2.11.7",
    "@editorjs/quote": "^2.7.6",
    "@editorjs/table": "^2.4.4",
    "@types/prismjs": "^1.26.5",
    "electron-log": "^5.3.3",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-simple-code-editor": "^0.14.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "dotenv": "^16.4.7",
    "electron": "^35.1.2",
    "electron-builder": "^24.6.3",
    "electron-notarize": "^1.2.2",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
